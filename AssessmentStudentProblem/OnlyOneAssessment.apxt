trigger OnlyOneAssessment on Assesment_Conduct__c (after insert, after update, before delete) {
    if(trigger.isAfter && trigger.isInsert) {
        updateAssessmentToStudent.insertTotalAssessmentGiven(Trigger.new);
        
        OnlyOneAssesmentHandler.oneAss(Trigger.old);
    }   
    if(trigger.isBefore && trigger.isDelete){
        updateAssessmentToStudent.updateTotalAssesmentGiven(trigger.old);
    }
}
